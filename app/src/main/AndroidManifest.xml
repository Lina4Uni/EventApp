<!-- File: app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventplusapp">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventPlusApp">

        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name="com.example.eventplusapp.java.EventManagementActivity" />
        <activity android:name="com.example.eventplusapp.java.AddEventActivity" />
        <activity android:name="com.example.eventplusapp.java.ParticipantManagementActivity" />
        <activity android:name="com.example.eventplusapp.java.AppointmentActivity" />
        <activity android:name="com.example.eventplusapp.java.InvitationsActivity" />
        <activity android:name="com.example.eventplusapp.java.RemindersActivity" />
        <activity android:name="com.example.eventplusapp.java.CreateAppointmentActivity" />
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>